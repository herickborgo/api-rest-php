{
  "name": "herickborgo/rest-api",
  "authors": [
    {
      "name": "Herick Borgo",
      "email": "hericoborgo1@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "HerickBorgo\\RestApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HerickBorgo\\RestApi\\Tests\\": "tests/"
    }
  },
  "require": {
    "squizlabs/php_codesniffer": "^3.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^2.18",
    "symfony/var-dumper": "^5.2"
  },
  "scripts": {
    "check-style": "php-cs-fixer fix --diff --verbose --dry-run .",
    "fix-style": "php-cs-fixer fix .",
    "tests": "phpunit --configuration ./phpunit.xml"
  }
}
